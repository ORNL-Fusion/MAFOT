
g++ $1.cxx -o ~/bin/$1 -w \
-L ~/lib/64 -lla_string -ltrip3d \
-L ~/lib/64/blitz/lib -lblitz \
-L /usr/lib -lgfortran \
-L /usr/local/openmpi/lib -lmpi -lmpi_cxx \
-I ~/src/include \
-I ~/lib/64/blitz/include \
-I /usr/local/openmpi/include \
-I /usr/local/openmpi/include/openmpi \
-O3 -fopenmp -Dlinux
