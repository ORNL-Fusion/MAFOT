names=( dtplot dtfix dtman dtlaminar dtfoot dtstructure iterplot iterfix iterman nstxplot )

for ((i=0; i<${#names[*]}; i++))
do
echo -n "$((i+1)): ${names[$i]}  "
cxx_gfort ${names[$i]}
if [ $? = 0 ] 
  then echo Success 
fi
done

names_mpi=( dtlaminar_mpi dtfoot_mpi iterlaminar_mpi iterfoot_mpi nstxlaminar_mpi nstxfoot_mpi )

for ((i=0; i<${#names_mpi[*]}; i++))
do
echo -n "$((i+1)): ${names_mpi[$i]}  "
cxx_gfort_mpi ${names_mpi[$i]}
if [ $? = 0 ]
  then echo Success
fi
done

